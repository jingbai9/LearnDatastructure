<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.myshop">

    <!-- 网络上加载图片 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="me.myshop.activity.MessageActivity"
            android:parentActivityName="me.myshop.activity.LoginActivity" />
        <activity
            android:name="me.myshop.activity.LoginActivity"
            android:parentActivityName="me.myshop.activity.MainActivity" />
        <activity
            android:name="me.myshop.activity.RegisterActivity"
            android:parentActivityName="me.myshop.activity.MainActivity" />
        <activity
            android:name="me.myshop.activity.ChangePasswordActivity"
            android:parentActivityName="me.myshop.activity.MainActivity" />
        <activity
            android:name="me.myshop.activity.GoodsDetailActivity"
            android:parentActivityName="me.myshop.activity.MainActivity" />
        <activity
            android:name="me.myshop.activity.OrderDetailActivity"
            android:parentActivityName="me.myshop.activity.MainActivity" />
        <activity
            android:name="me.myshop.activity.OrderPayActivity"
            android:parentActivityName="me.myshop.activity.MainActivity" />
        <activity
            android:name="me.myshop.activity.MyOrderActivity"
            android:parentActivityName="me.myshop.activity.MainActivity" />
        <activity
            android:name="me.myshop.activity.BalanceActivity"
            android:parentActivityName="me.myshop.activity.MainActivity" />
        <activity
            android:name="me.myshop.activity.ChargeActivity"
            android:parentActivityName="me.myshop.activity.MainActivity" />
        <activity
            android:name="me.myshop.activity.MainActivity"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>